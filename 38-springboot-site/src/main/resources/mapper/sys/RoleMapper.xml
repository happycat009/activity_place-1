<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huangjiabin.site.sys.mapper.RoleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.huangjiabin.site.sys.model.Role">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="disabled" property="disabled" />
        <result column="del_flag" property="delFlag" />
        <result column="remark" property="remark" />
    </resultMap>
    <resultMap id="RoleWithAuthority" type="com.huangjiabin.site.sys.model.Role" extends="BaseResultMap">
        <collection property="authoritys" ofType="com.huangjiabin.site.sys.model.Authority">
            <id column="aid" property="id"></id>
            <result column="aname" property="name" />
            <result column="aremark" property="remark" />
            <result column="adisabled" property="disabled" />
            <result column="adelFlag" property="delFlag" />
        </collection>
    </resultMap>

    <select id="selectRoleByUserId" resultType="com.huangjiabin.site.sys.model.Role">
        select r.id,r.name,r.disabled,r.del_flag,r.remark
        from sys_role as r
        left join sys_user_role as ur
        on r.id=ur.role_id
        where ur.user_id=#{id}
    </select>

    <select id="selectRoleWithAuthority" resultMap="RoleWithAuthority">
        select r.id,r.name,r.disabled,r.del_flag,r.remark,
        a.id as id,a.name as aname,a.remark as aremark,a.disabled as adisabled,a.del_flag as adelFlag
        from sys_role as r
        left join sys_role_authority as ur
        on r.id=ur.role_id
        left join sys_authority as a
        on ur.authority_id = a.id
    </select>

</mapper>
