<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huangjiabin.site.sys.mapper.ActivityBMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.huangjiabin.site.sys.model.ActivityB">
        <result column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="reserve_id" property="reserveId" />
        <result column="place_id" property="placeId" />
        <result column="title" property="title" />
        <result column="label" property="label" />
        <result column="type" property="type" />
        <result column="locale" property="locale" />
        <result column="content" property="content" />
        <result column="img" property="img" />
        <result column="create_time" property="createTime" />
        <result column="start_time" property="startTime" />
        <result column="end_time" property="endTime" />
        <result column="update_time" property="updateTime" />
        <result column="favour_num" property="favourNum" />
        <result column="join_num" property="joinNum" />
        <result column="need_num" property="needNum" />
        <result column="read_num" property="readNum" />
        <result column="is_stop" property="isStop" />
        <result column="is_top" property="isTop" />
        <result column="is_public" property="isPublic" />
        <result column="impose" property="impose" />
        <result column="is_delete" property="isDelete" />
    </resultMap>

    <select id="selectActivityBByUserId" resultMap="BaseResultMap">
        select ab.*
        from sys_activity_b ab,sys_user_activity ua
        where ab.id=ua.activity_id and ua.user_id = #{userId} and ua.is_out != 1
    </select>

</mapper>
